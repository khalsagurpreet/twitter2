<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a1691661.twitter.MainActivity">

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:id="@+id/textView"
            android:layout_width="289dp"
            android:layout_height="46dp"
            android:layout_weight="0.81"
            android:text="Messages"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="24dp"
            android:layout_height="45dp"
            android:layout_weight="0.17"
            app:srcCompat="@drawable/screeng" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="536dp"

        android:orientation="vertical"


        tools:layout_editor_absoluteX="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:weightSum="1"
        app:layout_constraintVertical_bias="0.508">

        <ScrollView
            style="@android:style/Widget.DeviceDefault.Light.ScrollView"
            android:layout_width="372dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="391dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:text="Talk privately with anyone who follows you."
                    android:textAlignment="center"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:text="Suggested users"
                    android:textAlignment="textStart" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="102dp"
                        android:layout_height="60dp"
                        app:srcCompat="@drawable/g" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="261dp"
                            android:layout_height="wrap_content"
                            android:text="STM"
                            android:textAlignment="textStart"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="88dp"
                            android:layout_height="27dp"
                            app:srcCompat="@drawable/gg" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="264dp"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="8dp"
                    tools:layout_editor_absoluteY="8dp">

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:background="@drawable/home" />

        <Button
            android:id="@+id/button2"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="@drawable/explore" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/noti" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/mesage" />

        <Button
            android:id="@+id/button5"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:background="@drawable/me" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
